<?xml version='1.0' encoding='utf-8'?>
<widget id="io.resico.webpos" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Resico webPOS</name>
    <description>
        Resico webPOS wrapper
    </description>
    <author email="al@ibsc.lv" href="http://ibsc.lv">
        IBSC Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/webpos/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/webpos/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/webpos/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/webpos/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/webpos/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/webpos/icon-192-xxxhdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/webpos/ldpi.png" />
        <splash density="land-mdpi" src="res/screen/android/webpos/mdpi.png" />
        <splash density="land-hdpi" src="res/screen/android/webpos/hdpi.png" />
        <splash density="land-xhdpi" src="res/screen/android/webpos/xhdpi.png" />
        <splash density="land-xxhdpi" src="res/screen/android/webpos/xxhdpi.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/webpos/xxxhdpi.png" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="landscape" />
    <preference name="AppendUserAgent" value=" webPOS" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <preference name="KeepRunning" value="true" />
    <preference name="LoadUrlTimeoutValue" value="10000" />
    <plugin name="com.phonegap.plugins.barcodescanner" spec="https://github.com/Telerik-Verified-Plugins/BarcodeScanner" />
    <plugin name="cordova-plugin-cache-clear" spec="^1.3.7" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.1.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-printer" spec="^0.7.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-themeablebrowser" spec="^0.2.17" />
    <plugin name="cz.blocshop.socketsforcordova" spec="^1.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^6.2.3" />
</widget>
